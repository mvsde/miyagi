{
  "name": "@miyagi/core",
  "version": "2.10.0",
  "description": "miyagi is a component development tool for JavaScript template engines.",
  "main": "index.js",
  "author": "Michael Gro√üklaus <mail@mgrossklaus.de> (https://www.mgrossklaus.de)",
  "license": "MIT",
  "homepage": "https://www.miyagi.dev",
  "bugs": "https://github.com/mgrsskls/miyagi/issues",
  "repository": {
    "type": "git",
    "url": "git@github.com:mgrsskls/miyagi.git",
    "directory": "packages/core"
  },
  "type": "module",
  "keywords": [
    "components",
    "pattern",
    "library",
    "html",
    "accessibility",
    "validation",
    "frontend"
  ],
  "engines": {
    "node": ">=16.7.0"
  },
  "files": [
    "api",
    "bin",
    "dist",
    "index.js",
    "lib"
  ],
  "bin": {
    "miyagi": "./bin/miyagi.js"
  },
  "dependencies": {
    "@stoplight/json-schema-sampler": "^0.2.2",
    "ajv": "^8.8.2",
    "anymatch": "^3.1.2",
    "axe-core": "^4.3.5",
    "consolidate": "^0.16.0",
    "cookie-parser": "^1.4.6",
    "css": "^3.0.0",
    "deepmerge": "^4.2.2",
    "directory-tree": "^3.0.1",
    "express": "^4.17.2",
    "handlebars": "^4.7.7",
    "handlebars-layouts": "^3.1.4",
    "js-yaml": "^4.1.0",
    "marked": "^4.0.7",
    "node-watch": "^0.7.2",
    "picocolors": "^1.0.0",
    "socket.io": "^4.4.0",
    "yargs": "^17.3.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.5",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "babel-jest": "^27.4.5",
    "codecov": "^3.8.3",
    "cssnano": "^5.0.13",
    "del": "^6.0.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^37.2.8",
    "eslint-plugin-prettier": "^4.0.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-postcss": "^9.0.1",
    "jest": "^27.4.5",
    "jsdoc-to-markdown": "^7.1.0",
    "postcss": "^8.4.5",
    "postcss-import": "^14.0.2",
    "postcss-preset-env": "^7.0.2",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "rollup": "^2.61.1",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "supertest": "^6.1.6"
  },
  "scripts": {
    "build": "npm run build:assets",
    "build:assets": "gulp build",
    "build:docs": "node .jsdoc.js",
    "docs": "npm run build:docs && cd jsdoc && mkdocs serve",
    "test": "jest --colors --detectOpenHandles",
    "lint": "stylelint assets/css/ && eslint lib/ && eslint assets/js/",
    "fix": "eslint lib/ --fix && eslint assets/js/ --fix",
    "release": "standard-version -t core/v"
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "lib/**/*.js",
      "index.js",
      "!lib/__dirname.js"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "\\.js$": [
        "babel-jest"
      ]
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "browserslist": [
    "last 2 versions",
    "> 2%",
    "not ie <= 11",
    "not ie_mob <= 11",
    "not op_mini all",
    "not op_mob < 100",
    "not baidu < 100",
    "not and_qq < 100",
    "not dead"
  ]
}
